{
  "compilerOptions": {
    "checkJs": false,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "target": "es6",
    "module": "es2015",
    "baseUrl": "./src",
    "paths": {
      "*": ["shared/*", "client/*", "server/*", "config/*", "*"]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "build",
    ".vscode",
    "coverage",
    ".npm",
    ".yarn"
  ],
  "include": ["src", "config", "scripts"],
  "typeAcquisition": {
    "enable": true,
    "include": ["react", "react-dom", "jest", "testing-library__jest-dom"]
  }
}
